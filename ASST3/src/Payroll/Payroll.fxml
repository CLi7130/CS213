<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>

<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Payroll.PayrollController">
   <top>
      <TabPane prefHeight="272.0" prefWidth="600.0" tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="CENTER">
         <tabs>
            <Tab text="Employee Management">
               <content>
                  <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="260.0" prefWidth="600.0">
                     <children>
                        <GridPane layoutX="67.0" prefHeight="90.0" prefWidth="491.0">
                           <columnConstraints>
                              <ColumnConstraints hgrow="SOMETIMES" maxWidth="296.0" minWidth="10.0" prefWidth="183.0" />
                              <ColumnConstraints hgrow="SOMETIMES" maxWidth="518.0" minWidth="10.0" prefWidth="417.0" />
                           </columnConstraints>
                           <rowConstraints>
                              <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                              <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                              <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                           </rowConstraints>
                           <children>
                              <Label text="Name" />
                              <Label text="Department" GridPane.rowIndex="1" />
                              <Label text="Date Hired" GridPane.rowIndex="2" />
                              <DatePicker fx:id="date" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                              <TextField fx:id="name" prefHeight="25.0" prefWidth="211.0" GridPane.columnIndex="1" />
                              <HBox prefHeight="100.0" prefWidth="200.0" spacing="100.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
                                 <children>
                                    <RadioButton fx:id="CS" mnemonicParsing="false" text="CS" />
                                    <RadioButton fx:id="IT" mnemonicParsing="false" text="IT" />
                                    <RadioButton fx:id="ECE" mnemonicParsing="false" text="ECE" />
                                 </children>
                              </HBox>
                           </children>
                        </GridPane>
                        <HBox layoutX="65.0" layoutY="90.0" prefHeight="34.0" prefWidth="493.0" spacing="100.0">
                           <children>
                              <RadioButton fx:id="fulltime" mnemonicParsing="false" onAction="#visibility" text="Fulltime" />
                              <RadioButton fx:id="parttime" mnemonicParsing="false" onAction="#visibility" text="Parttime" />
                              <RadioButton fx:id="management" mnemonicParsing="false" onAction="#visibility" text="Management" />
                           </children>
                        </HBox>
                        <HBox layoutX="65.0" layoutY="153.0" prefHeight="29.0" prefWidth="479.0" spacing="25.0">
                           <children>
                              <Label prefHeight="17.0" prefWidth="82.0" text="Hours Worked" />
                              <TextField fx:id="hoursWorked" />
                              <Label text="Rate" />
                              <TextField fx:id="hourlyRate" />
                           </children>
                        </HBox>
                        <HBox layoutX="67.0" layoutY="124.0" prefHeight="29.0" prefWidth="477.0" spacing="25.0">
                           <children>
                              <Label text="Annual Salary" />
                              <TextField fx:id="annualSalary" prefHeight="25.0" prefWidth="377.0" />
                           </children>
                        </HBox>
                        <HBox layoutX="67.0" layoutY="182.0" prefHeight="33.0" prefWidth="455.0" spacing="100.0">
                           <children>
                              <RadioButton fx:id="manager" mnemonicParsing="false" text="Manager" />
                              <RadioButton fx:id="dpmtHead" mnemonicParsing="false" text="Department Head" />
                              <RadioButton fx:id="director" mnemonicParsing="false" text="Director" />
                           </children>
                        </HBox>
                        <HBox layoutX="51.0" layoutY="208.0" prefHeight="29.0" prefWidth="511.0" spacing="20.0">
                           <children>
                              <Button mnemonicParsing="false" onAction="#clear" text="Clear" />
                              <Button mnemonicParsing="false" onAction="#add" text="Add Employee" />
                              <Button mnemonicParsing="false" onAction="#remove" text="Remove Employee" />
                              <Button fx:id="setHours" mnemonicParsing="false" onAction="#setHours" text="Set Hours" />
                              <Button mnemonicParsing="false" onAction="#processPayments" text="Process Payments" />
                           </children>
                        </HBox>
                     </children>
                  </AnchorPane>
               </content>
            </Tab>
            <Tab text="Employee Database">
               <content>
                  <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <MenuBar layoutX="36.0" layoutY="46.0" prefHeight="35.0" prefWidth="105.0">
                          <menus>
                            <Menu mnemonicParsing="false" text="File">
                              <items>
                                <MenuItem mnemonicParsing="false" onAction="#fileImport" text="Import" />
                                    <MenuItem mnemonicParsing="false" onAction="#fileExport" text="Export" />
                              </items>
                            </Menu>
                            <Menu mnemonicParsing="false" text="Print">
                              <items>
                                <MenuItem mnemonicParsing="false" onAction="#print" text="Print" />
                                    <MenuItem mnemonicParsing="false" onAction="#printByDate" text="Print By Date" />
                                    <MenuItem mnemonicParsing="false" onAction="#printByDpmt" text="Print By Department" />
                              </items>
                            </Menu>
                          </menus>
                        </MenuBar>
                        <Label layoutX="36.0" layoutY="14.0" text="Select Your Action Below" />
                     </children></AnchorPane>
               </content>
            </Tab>
         </tabs>
      </TabPane>
   </top>
   <bottom>
      <TextArea fx:id="messageArea" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
   </bottom>
</BorderPane>
